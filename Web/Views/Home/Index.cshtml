@model List<Core.Models.MathProblem>
    @{
    ViewData["Title"] = "Calculator";
    }

    <div class="container">
        <div class="calc">
            <div id="calc-display" class="calc__display">
            </div>
            <div class="calc__keyboard">
                <button class="calc__btn" onclick="addText('1')">1</button>
                <button class="calc__btn" onclick="addText('2')">2</button>
                <button class="calc__btn" onclick="addText('3')">3</button>
                <button class="calc__btn" onclick="addText(' + ')">+</button>
                <button class="calc__btn" onclick="addText('4')">4</button>
                <button class="calc__btn" onclick="addText('5')">5</button>
                <button class="calc__btn" onclick="addText('6')">6</button>
                <button class="calc__btn" onclick="addText(' - ')">-</button>
                <button class="calc__btn" onclick="addText('7')">7</button>
                <button class="calc__btn" onclick="addText('8')">8</button>
                <button class="calc__btn" onclick="addText('9')">9</button>
                <button class="calc__btn" onclick="addText(' * ')">*</button>
                <button class="calc__btn" onclick="addText('0')">0</button>
                <button class="calc__btn" onclick="addText('.')">.</button>
                <button class="calc__btn" onclick="clearDisplay()">C</button>
                <button class="calc__btn" onclick="addText(' / ')">/</button>
                <button class="calc__btn" onclick="calculateResult()" style="grid-column: 1 / 5;">Calc</button>
            </div>
        </div>
        <div class="list">
            <h3>History:</h3>
            <hr>
            <ul id="calculation-history" class="list__items">
                @foreach (Core.Models.MathProblem mathProblem in Model)
                {
                <li class="list__item">@(mathProblem.ToString())</li>
                }
            </ul>
        </div>
    </div>
    <script src="~/js/calculator.js" asp-append-version="true"></script>

